<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Url Shortener</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Link Shortener</a>
    </nav>

    <div class="container">
        <form method="post" action="/shorturls" class="my-4 form-inline">
            <input type="url" name="fullUrl" placeholder="Url" id="fullUrl" class="form-control col mr-2" required>
            <button class="btn btn-primary" type="submit">Shrink</button>
        </form>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Full Url</th>
                    <th>Short Url</th>
                    <th>Click</th>
                </tr>
            </thead>
            <tbody>
                
                    <% shorturls.forEach(shortUrl => { %>

                        <tr>
                            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                            <td><a href="/<%= shortUrl.short %>">/<%= shortUrl.short %></a></td>
                            <td><%= shortUrl.clicks %></td>
                        </tr>

                    <% }) %>
                    
               
              
            </tbody>
        </table>
    </div>
    
</body>
</html>